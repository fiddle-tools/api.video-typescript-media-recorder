        "target": "ES3",
        "lib": ["ES2015", "dom"],
        "outDir": "./dist",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "rootDirs": ["./src", "./test"],
        "sourceMap": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
